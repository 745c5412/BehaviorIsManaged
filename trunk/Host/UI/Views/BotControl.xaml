<UserControl x:Class="BiM.Host.UI.Views.BotControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" MinHeight="350" MinWidth="450"
             xmlns:avalondock="http://avalondock.codeplex.com"
             DataContext="{Binding ViewModel, RelativeSource={RelativeSource Mode=Self}}">
  <UserControl.Resources>
  </UserControl.Resources>
  <UserControl.IsEnabled>
    <Binding Path="Bot.Running" />
  </UserControl.IsEnabled>
  <Grid>
    <avalondock:DockingManager DocumentsSource="{Binding Documents}">
      <avalondock:LayoutRoot>
        <avalondock:LayoutPanel Orientation="Horizontal">
          <avalondock:LayoutDocumentPaneGroup>
            <avalondock:LayoutDocumentPane x:Name="MainPanel">
            </avalondock:LayoutDocumentPane>
          </avalondock:LayoutDocumentPaneGroup>
        </avalondock:LayoutPanel>
      </avalondock:LayoutRoot>
    </avalondock:DockingManager>
  </Grid>
</UserControl>